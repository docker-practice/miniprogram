{
  "files.exclude": {
    "client/pages/**/index.js": true
  },
  "json.schemas": [
    {
      "fileMatch": [
        "client/app.json"
      ],
      "url": "/schema/app.schema.json"
    },
    {
      "fileMatch": [
        "client/sitemap.json"
      ],
      "url": "/schema/sitemap.schema.json"
    },
    {
      "fileMatch": [
        "project.config.json"
      ],
      "url": "/schema/projectconfig.schema.json"
    },
    {
      "fileMatch": [
        "client/theme.json"
      ],
      "url": "/schema/theme.schema.json"
    },
    {
      "fileMatch": [
        "client/pages/*.json"
      ],
      "url": "/schema/page.schema.json"
    },
  ]
}
