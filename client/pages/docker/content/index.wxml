  <i-spin fix></i-spin>
</view> -->

<view class="ad" style="background-color:{{noticeBGColor}}" wx:if="{{showAd}}">
<ad unit-id="adunit-1246f0a5e441ea4c" binderror="adError"></ad>
</view>

<view class="ad" style="background-color:{{noticeBGColor}}" wx:else>
  <view class="adError" wx:if="{{show}}">
  <button bindtap="dashang" type='warn' class="dashang">打赏</button>
  </view>
</view>

<import src="/towxml/entry.wxml"/>

<template is="entry" data="{{...data}}"/>

