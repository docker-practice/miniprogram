<view wx:if="{{show}}">

<view class="ad" style="background-color:{{noticeBGColor}}">
<ad unit-id="adunit-1246f0a5e441ea4c"></ad>
</view>

<view wx:if="{{theme === 'dark'}}" class="dark">
<textarea bindinput="inputNoteTitle" placeholder="请输入标题..." class="dark-title note-title"
value="{{textareaTitleValue}}"
></textarea>

<textarea bindinput="inputNote" class="dark" placeholder="您可以在这里提交学习本节遇到的问题，或者发现的内容错误~(支持 Markdown 格式)"
maxlength='-1' value="{{textareaValue}}">
</textarea>

<i-button bind:click="pushNote" size="large">提交到 GitHub</i-button>
<view class="note-list"></view>
</view>

<view wx:else class="light">
<textarea bindinput="inputNoteTitle" placeholder="请输入标题..." class="light-title note-title"
value="{{textareaTitleValue}}"></textarea>

<textarea bindinput="inputNote" class="light" placeholder="您可以在这里提交学习本节遇到的问题，或者发现的内容错误~(支持 Markdown 格式)"
maxlength='-1' value="{{textareaValue}}">
</textarea>

<i-button bind:click="pushNote" size="large" loading="{{isLoading}}">提交到 GitHub</i-button>
<view class="note-list"></view>
</view>

<view class="weui-footer" style="background-color:{{noticeBGColor}}">
  <view class="weui-footer__text">Copyright ©docker_practice</view>
</view>

</view>
<view wx:else style="height: 100vh;background-color:{{noticeBGColor}}"></view>

<i-tab-bar fixed bind:change="tabbar" i-class="{{tabbarMode}}">
  <i-tab-bar-item key="before" icon="return" wx:if="{{before_key}}"></i-tab-bar-item>
  <i-tab-bar-item key="menu" icon="createtask"></i-tab-bar-item>
  <i-tab-bar-item key="next" icon="enter" wx:if="{{next_key}}"></i-tab-bar-item>
</i-tab-bar>

</view>
