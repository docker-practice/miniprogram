<view wx:if="{{show}}">

<i-button inline="true" bind:click="pushNote" size="large">在 GitHub 反馈本节内容</i-button>

<i-button inline="true" i-class="favorites" bind:click="favorites" size="large" type="primary">收藏</i-button>

<view class="note-list"></view>

<i-button i-class="buyBook" bind:click="buyBook" size="large" type="success">进阶学习 (实体书) 📕</i-button>

<view class="weui-footer" style="background-color:{{noticeBGColor}}">
  <view class="weui-footer__text">GitHub yeasy/docker_practice</view>
</view>

</view>

<view wx:else style="height: 100vh;background-color:{{noticeBGColor}}"></view>

<i-tab-bar fixed bind:change="tabbar" i-class="{{tabbarMode}}">
  <i-tab-bar-item key="before" icon="return" wx:if="{{before_key}}"></i-tab-bar-item>
  <i-tab-bar-item key="menu" icon="createtask"></i-tab-bar-item>
  <i-tab-bar-item key="next" icon="enter" wx:if="{{next_key}}"></i-tab-bar-item>
</i-tab-bar>

</view>
